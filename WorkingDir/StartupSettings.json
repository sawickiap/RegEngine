{
    "UseThreadNames": true,
    "UseD3D12ObjectNames": true,

    // Set to true to enable D3D Debug Layer.
  
    "D3D12DebugLayer.Enabled": true,
    // Set to false to disable synchronized command queue validation.
    // Should be enabled by default. Disabling it may increase performance.
    "D3D12DebugLayer.SynchronizedCommandQueueValidation.Enabled": true,
    // 3 extra flags that can be enabled for the Debug Layer device.
    "D3D12DebugLayer.AllowBehaviorChangingDebugAids": false,
    "D3D12DebugLayer.ConservativeResourceStateTracking": false,
    "D3D12DebugLayer.DisableVirtualizedBundlesValidation": false,
    // Set to true to print the list of alive D3D12 objects before D3D12 device is destroyed, as Debug Layer warnings.
    "D3D12DebugLayer.ReportLiveDeviceObjects": true,
    // Extra slowdown of the GPU. Default is 0, which means slowdown is disabled.
    "D3D12DebugLayer.SlowdownPerformanceFactor": 0.0,
    
    // Set to true to enable additional, super slow GPU-based validation.
    "D3D12DebugLayer.GPUBasedValidation.Enabled": false,
    // Set to false to disable state tracking.
    // Should be enabled by default. Disabling it may increase performance.
    "D3D12DebugLayer.GPUBasedValidation.StateTracking.Enabled": true,
    "D3D12DebugLayer.GPUBasedValidation.MaxMessagesPerCommandList": 256,
    /*
    0 = D3D12_GPU_BASED_VALIDATION_SHADER_PATCH_MODE_NONE = 0
    1 = D3D12_GPU_BASED_VALIDATION_SHADER_PATCH_MODE_STATE_TRACKING_ONLY
    2 = D3D12_GPU_BASED_VALIDATION_SHADER_PATCH_MODE_UNGUARDED_VALIDATION (default)
    3 = D3D12_GPU_BASED_VALIDATION_SHADER_PATCH_MODE_GUARDED_VALIDATION
    */
    "D3D12DebugLayer.GPUBasedValidation.DefaultShaderPatchMode": 2,
    /*
    D3D12_GPU_BASED_VALIDATION_PIPELINE_STATE_CREATE_FLAG_FRONT_LOAD_CREATE_TRACKING_ONLY_SHADERS = 0x1
    D3D12_GPU_BASED_VALIDATION_PIPELINE_STATE_CREATE_FLAG_FRONT_LOAD_CREATE_UNGUARDED_VALIDATION_SHADERS = 0x2
    D3D12_GPU_BASED_VALIDATION_PIPELINE_STATE_CREATE_FLAG_FRONT_LOAD_CREATE_GUARDED_VALIDATION_SHADERS = 0x4
    Default is 0.
    */
    "D3D12DebugLayer.GPUBasedValidation.PipelineStateCreateFlags": 0,
    
    "FrameCount": 3,
    "Size": [ 1920, 1080 ],
    // Set to true to accept unsigned shaders.
    "EnableExperimentalShaderModels": true,

    "ImGui.Font.FilePath": "Data/Fonts/DroidSans.ttf",
    "ImGui.Font.Size": 16,

    "SRVDescriptors.Persistent.MaxCount": 1024,
    "SRVDescriptors.Temporary.MaxCountPerFrame": 1024,
    // Keep in mind that "limit for shader visible sampler heaps is 2048".
    "SamplerDescriptors.Persistent.MaxCount": 128,
    "SamplerDescriptors.Temporary.MaxCountPerFrame": 128,
    "RTVDescriptors.Persistent.MaxCount": 128,
    "DSVDescriptors.Persistent.MaxCount": 128,
    // In bytes. Must be multiply of 32.
    "ConstantBuffers.Temporary.MaxSizePerFrame": 200000,

    // Between 0 (for anisotropic filtering disabled) and 16 (max quality).
    "MaxAnisotropy": 16,

    /*
    Level of logging from Assimp library:
    0 = none, 1 = errors, 2 = also warnings, 3 = also information, 4 = also verbose debug information
    It affects both main logging output and Assimp.LogFilePath.
    All messages from Assimp are logged at "info" level in the engine.
    */
    "Assimp.LogSeverity": 2,
    // File path for an extra log just for Assimp. Empty string if no file should be created.
    "Assimp.LogFilePath": ""
}
